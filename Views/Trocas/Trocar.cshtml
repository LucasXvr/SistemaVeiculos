@* @model SeuNamespace.Models.TrocaViewModel *@

@{
    ViewData["Title"] = "Realizar Troca";
}

<div class="container mt-4">
    <h2>Realizar Troca</h2>

    <form asp-action="Trocar" method="post">
        <!-- Adicione os campos do formulário para a troca -->
        <div class="form-group">
            <label>Detalhes:</label>
            <input class="form-control" />
        </div>

        <div class="form-group">
            <label>Data da Troca:</label>
            <input type="date" class="form-control" />
        </div>

        <!-- Adicione mais campos conforme necessário -->

        <button type="submit" class="btn btn-primary">Realizar Troca</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>
