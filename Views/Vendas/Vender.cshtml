@* @model SeuNamespace.Models.VendaViewModel *@

@{
    ViewData["Title"] = "Realizar Nova Venda";
}

<div class="container mt-4">
    <h2>Realizar Nova Venda</h2>

    <form asp-action="Vender" method="post">
        <div class="form-group">
            <label for="cliente">Cliente:</label>
            <select class="form-control">
                <option value="">Selecione um cliente</option>
            </select>
        </div>

        <div class="form-group">
            <label for="veiculo">Veículo:</label>
            <select class="form-control">
                <option value="">Selecione um veículo</option>
            </select>
        </div>

        <!-- Adicione mais campos e informações necessárias para a venda -->

        <button type="submit" class="btn btn-primary">Realizar Venda</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista de Vendas</a>
    </div>
</div>
