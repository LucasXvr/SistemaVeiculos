@* @model Cliente *@

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-4">
    <h2>Detalhes do Cliente</h2>

    <dl class="row">
        <dt class="col-sm-2">ID:</dt>
        <dd class="col-sm-10">Id</dd>

        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">Nome</dd>

        <dt class="col-sm-2">E-mail:</dt>
        <dd class="col-sm-10">Email</dd>

        <dt class="col-sm-2">Telefone:</dt>
        <dd class="col-sm-10">Telefone</dd>

        <dt class="col-sm-2">Endereço:</dt>
        <dd class="col-sm-10">Endereco</dd>

        <!-- Adicione mais campos conforme necessário -->

    </dl>

    <div>
        <a class="btn btn-primary" asp-action="Editar" asp-route-id="Id">Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
