@model Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container mt-4">
    <h2>Detalhes do Cliente</h2>

    <div class="tab-content mt-2">
        <!-- Informações do Veículo -->
        <div class="tab-pane fade show active" role="tabpanel">
            <div class="card p-4">
                <!-- Seção: Informações Veículo -->
                <div>
                    <h3>Informações do Cliente</h3>
                    <h5 class="card-title">Código: @Model.Id</h5>
                    <p class="card-text">
                        <strong>Nome:</strong> @Model.Nome
                    </p>
                    <p class="card-text">
                        <strong>Email:</strong> @Model.Email
                    </p>
                    <p class="card-text">
                        <strong>Data de Nascimento:</strong> @Model.DataNascimento
                    </p>
                    <p class="card-text">
                        <strong>CPF/CNPJ:</strong> @Model.CPFCNPJ
                    </p>
                    <p class="card-text">
                        <strong>RG/IE:</strong> @Model.RGIE
                    </p>
                    <p class="card-text">
                        <strong>Nome Fantasia:</strong> @Model.NomeFantasia
                    </p>
                    <p class="card-text">
                        <strong>Endereço:</strong> @Model.Endereco
                    </p>
                    <p class="card-text">
                        <strong>Número:</strong> @Model.Numero
                    </p>
                    <p class="card-text">
                        <strong>Complemento:</strong> @Model.Complemento
                    </p>
                    <p class="card-text">
                        <strong>Bairro:</strong> @Model.Bairro
                    </p>
                    <p class="card-text">
                        <strong>CEP:</strong> @Model.CEP
                    </p>

                    <h3>Endereço</h3>

                    <p class="card-text">
                        <strong>Endereço:</strong> @Model.Endereco
                    </p>

                    <p class="card-text">
                        <strong>Número:</strong> @Model.Numero
                    </p>

                    <p class="card-text">
                        <strong>Complemento:</strong> @Model.Complemento
                    </p>

                    <p class="card-text">
                        <strong>Bairro:</strong> @Model.Bairro
                    </p>

                    <p class="card-text">
                        <strong>CEP:</strong> @Model.CEP
                    </p>

                    <p class="card-text">
                        <strong>WhatsApp:</strong> @Model.WhatsApp
                    </p>

                    <p class="card-text">
                        <strong>Fone-1:</strong> @Model.Fone1
                    </p>

                    <p class="card-text">
                        <strong>Fone-2:</strong> @Model.Fone2
                    </p>

                    <p class="card-text">
                        <strong>Fone-3:</strong> @Model.Fone3
                    </p>

                    <h3>Classificação</h3>
                    <p class="card-text">
                        <strong>Classificacao:</strong> @Model.Classificacao
                    </p>
                    <h3>Observações</h3>

                    <p class="card-text">
                        <strong>Observacões:</strong> @Model.Observacoes
                    </p>
                </div>

            </div>
        </div>

        <div class="btn-group mt-3" role="group">
            <a class="btn btn-info" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
            <a class="btn btn-danger" asp-action="ConfirmarExclusao" asp-route-id="@Model.Id">Excluir</a>
        </div>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
        </div>
    </div>
