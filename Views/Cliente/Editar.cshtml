@* @model Cliente *@

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <h2>Editar Cliente</h2>

    <form asp-action="Editar" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" id="nome" name="nome" value="Nome" required>
        </div>

        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="email" class="form-control" id="email" name="email" value="Email" required>
        </div>

        <div class="form-group">
            <label for="telefone">Telefone:</label>
            <input type="text" class="form-control" id="telefone" name="telefone" value="Telefone" required>
        </div>

        <div class="form-group">
            <label for="endereco">Endereço:</label>
            <textarea class="form-control" id="endereco" name="endereco" rows="3" required>Endereco</textarea>
        </div>

        <!-- Adicione mais campos conforme necessário -->

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" asp-action="Detalhes" asp-route-id="Id">Cancelar</a>
    </form>
</div>
